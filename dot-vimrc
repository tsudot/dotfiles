" Pathogen
execute pathogen#infect()

set ts=4 " tabstop = 4
set sw=4 " shiftwidth = 4
set et " expandtab
set ai " autoindent
set sta " smarttab
set sm " showmatch

" Set font to monaco
set guifont=Monaco\ 8
set bg=dark
set t_Co=256

" Enable syntax highlighting
syntax on
colorscheme molokai

set number
set cursorline 

filetype plugin on

filetype indent on

